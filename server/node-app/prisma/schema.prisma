// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model issuer {
  id                          Int       @id @default(autoincrement())
  name                        String
  official_domain             String?
  website_url                 String?
  type                        String    // enum: university, edtech, company, training_provider
  email                       String    @unique
  phone                       String?
  password_hash               String?
  contact_person_name         String?
  contact_person_designation  String?
  address                     String?
  kyc_document_url            String?
  logo_url                    String?
  status                      String    @default("pending") // pending, approved, rejected
  approved_at                 DateTime?
  rejected_reason             String?
  is_blocked                  Boolean   @default(false)
  blocked_reason              String?
  created_at                  DateTime  @default(now())

  apiKeys                     issuer_api_key[]
  credentials                 credential[]
}

model issuer_api_key {
  id                     Int      @id @default(autoincrement())
  issuer_id              Int
  name                   String
  api_key                String   @unique
  active                 Boolean  @default(true)
  revoked_reason         String?
  expires_at             DateTime?
  last_used_at           DateTime?
  usage_count            Int      @default(0)
  rate_limit_per_minute  Int      @default(60)
  allowed_ips            String?
  created_at             DateTime @default(now())

  issuer                 issuer   @relation(fields: [issuer_id], references: [id])
}

model learner {
  id                     Int       @id @default(autoincrement())
  email                  String?   @unique
  phone                  String?   @unique
  hashed_password        String?
  profileFolder          String?
  profileUrl             String?
  external_digilocker_id String?
  status                 String    @default("active")
  other_emails           String[]
  created_at             DateTime  @default(now())
  dateOfBirth            DateTime?
  gender                 String?
  credentials            credential[]
}

model admin {
  id             Int      @id @default(autoincrement())
  email          String   @unique
  password_hash  String
  created_at     DateTime @default(now())
}

model registration_session {
  id                  String    @id @default(uuid())
  email               String?
  phone               String?
  otp_hash            String
  is_verified         Boolean   @default(false)
  verification_method String    // 'email' or 'phone'
  expires_at          DateTime
  verified_at         DateTime?
  created_at          DateTime  @default(now())

  @@index([email])
  @@index([phone])
  @@index([expires_at])
}

model email_verification_session {
  id           String    @id @default(uuid())
  learner_id   Int
  email        String
  otp_hash     String
  is_verified  Boolean   @default(false)
  expires_at   DateTime
  verified_at  DateTime?
  created_at   DateTime  @default(now())

  @@index([learner_id])
  @@index([email])
  @@index([expires_at])
}

model issuer_registration_session {
  id                 String    @id @default(uuid())
  email              String
  otp_hash           String
  is_verified        Boolean   @default(false)
  expires_at         DateTime
  verified_at        DateTime?
  registration_data  Json
  created_at         DateTime  @default(now())

  @@index([email])
  @@index([expires_at])
}

model primary_contact_verification_session {
  id                 String    @id @default(uuid())
  learner_id         Int
  contact_type       String    // 'email' or 'phone'
  contact_value      String    // email address or phone number
  otp_hash           String
  is_verified        Boolean   @default(false)
  expires_at         DateTime
  verified_at        DateTime?
  created_at         DateTime  @default(now())

  @@index([learner_id])
  @@index([expires_at])
}

model credential {
  id              Int       @id @default(autoincrement())
  issuer_id       Int
  learner_id      Int?
  credential_uid  String    @unique
  metadata        Json
  status          String    @default("issued") // issued, claimed, revoked
  issued_at       DateTime  @default(now())
  claimed_at      DateTime?

  issuer          issuer    @relation(fields: [issuer_id], references: [id])
  learner         learner?  @relation(fields: [learner_id], references: [id])
  
  blockchain_record  blockchain_record?
  pdf_certificate    pdf_certificate?

  @@index([issuer_id])
  @@index([learner_id])
  @@index([credential_uid])
  @@index([status])
}

model blockchain_record {
  id                 Int       @id @default(autoincrement())
  credential_id      Int       @unique
  blockchain_tx_id   String
  hash_value         String
  stored_at          DateTime  @default(now())

  credential         credential @relation(fields: [credential_id], references: [id])

  @@index([blockchain_tx_id])
}

model pdf_certificate {
  id             Int       @id @default(autoincrement())
  credential_id  Int       @unique
  pdf_url        String
  qr_code_url    String?
  created_at     DateTime  @default(now())

  credential     credential @relation(fields: [credential_id], references: [id])
}

