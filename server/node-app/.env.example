# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/micromerit?schema=public"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# API Key Configuration
API_KEY_LENGTH=64
API_KEY_DEFAULT_RATE_LIMIT=60

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Bcrypt Configuration
BCRYPT_ROUNDS=10

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:5173

# Logging
LOG_LEVEL=info

# Email Configuration (Nodemailer with Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# Twilio Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# OTP Configuration
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6

# Notification Configuration
# Controls whether to actually send emails and SMS (true/false)
# If not set, defaults to: production=true, development=false
SEND_SMAILS_AND_MESSAGES=false

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/learner/oauth/google/callback

DIGILOCKER_CLIENT_ID=your-digilocker-client-id
DIGILOCKER_CLIENT_SECRET=your-digilocker-client-secret
DIGILOCKER_CALLBACK_URL=http://localhost:3000/auth/learner/oauth/digilocker/callback
DIGILOCKER_FETCH_URL=https://api.digitallocker.gov.in/public/oauth2/1/files

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_S3_BUCKET=micromerit-certificates
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key


# Filebase Configuration (IPFS Pinning via SDK)
FILEBASE_ACCESS_KEY_ID=your-filebase-access-key
FILEBASE_SECRET_ACCESS_KEY=your-filebase-secret-key
FILEBASE_BUCKET_NAME=micromerit-credentials
FILEBASE_GATEWAY_URL=https://ipfs.filebase.io/ipfs/


# Blockchain Configuration
BLOCKCHAIN_MOCK_ENABLED=false
BLOCKCHAIN_NETWORK=sepolia
BLOCKCHAIN_CONTRACT_ADDRESS=your-deployed-contract-address

# Redis Configuration (for BullMQ queue)
REDIS_HOST=localhost
REDIS_PORT=6379

#Service urls
BLOCKCHAIN_SERVICE_URL=http://localhost:3001
AI_SERVICE_URL=http://127.0.0.1:8000
APP_URL=http://localhost:3000

# External Credential Sync Configuration
ENABLE_EXTERNAL_SYNC=true
POLL_INTERVAL_HOURS=1

# Course Hour Validation - credentials outside this range will be rejected
MIN_HOUR_LEN=7.5
MAX_HOUR_LEN=30
POSSIBLE_MAX_HOUR=1000  # Deprecated, use MAX_HOUR_LEN instead

# Provider Issuer IDs - Run `npx tsx prisma/seed_test_users.ts` to create these issuers
# The seed script will output the IDs to configure below

# NSDC Provider
NSDC_ENABLED=true
NSDC_BASE_URL=http://localhost:4000/nsdc
NSDC_ISSUER_ID=4
NSDC_CLIENT_ID=mock-client
NSDC_CLIENT_SECRET=mock-secret

# Udemy Provider
UDEMY_ENABLED=true
UDEMY_BASE_URL=http://localhost:4000/udemy
UDEMY_ISSUER_ID=5
UDEMY_CLIENT_ID=mock-client
UDEMY_CLIENT_SECRET=mock-secret

# Jaimin Pvt Ltd Provider
JAIMIN_ENABLED=true
JAIMIN_BASE_URL=http://localhost:4000/jaimin
JAIMIN_ISSUER_ID=6
JAIMIN_API_KEY=mock-api-key

# SIH (Smart India Hackathon) Provider
SIH_ENABLED=true
SIH_BASE_URL=http://localhost:4000/sih
SIH_ISSUER_ID=7
SIH_API_KEY=mock-api-key
