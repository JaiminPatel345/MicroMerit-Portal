# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/micromerit?schema=public"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# API Key Configuration
API_KEY_LENGTH=64
API_KEY_DEFAULT_RATE_LIMIT=60

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Bcrypt Configuration
BCRYPT_ROUNDS=10

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:5173

# Logging
LOG_LEVEL=info

# Email Configuration (Nodemailer with Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# Twilio Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# OTP Configuration
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/learner/oauth/google/callback

DIGILOCKER_CLIENT_ID=your-digilocker-client-id
DIGILOCKER_CLIENT_SECRET=your-digilocker-client-secret
DIGILOCKER_CALLBACK_URL=http://localhost:3000/auth/learner/oauth/digilocker/callback
DIGILOCKER_FETCH_URL=https://api.digitallocker.gov.in/public/oauth2/1/files

# AI Service Configuration (Python FastAPI with Groq)
AI_SERVICE_URL=http://localhost:8000

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_S3_BUCKET=micromerit-certificates
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# Application URL
APP_URL=http://localhost:3000

# Filebase Configuration (IPFS Pinning via SDK)
FILEBASE_ACCESS_KEY_ID=your-filebase-access-key
FILEBASE_SECRET_ACCESS_KEY=your-filebase-secret-key
FILEBASE_BUCKET_NAME=micromerit-credentials
FILEBASE_GATEWAY_URL=https://ipfs.filebase.io/ipfs/

# Blockchain Configuration
BLOCKCHAIN_MOCK_ENABLED=true
BLOCKCHAIN_NETWORK=ethereum_testnet
BLOCKCHAIN_CONTRACT_ADDRESS=mock_contract
